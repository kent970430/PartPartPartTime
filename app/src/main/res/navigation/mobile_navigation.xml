<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.partpartparttime.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_nav_home_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_nav_home_to_applicantFragment"
            app:destination="@id/applicantFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.partpartparttime.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.example.partpartparttime.ui.tools.ToolsFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_tools" />
    <fragment
        android:id="@+id/login"
        android:name="com.example.partpartparttime.ui.login.Login"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_applicantFragment"
            app:destination="@id/applicantFragment" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.partpartparttime.ui.register.Register"
        android:label="@string/menu_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/events"
        android:name="com.example.partpartparttime.ui.events.events"
        android:label="@string/menu_event"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/applicantFragment"
        android:name="com.example.partpartparttime.ui.applicant_profile.CompanyFragment"
        android:label="fragment_applicant"
        tools:layout="@layout/fragment_applicant" />
</navigation>