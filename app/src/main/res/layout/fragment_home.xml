<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/buttonHis"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="547dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homebutton"
        android:padding="10dp"
        android:text="History"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="84dp"
        android:text="@string/partpartpartTime"
        android:textColor="#242729"
        android:textSize="80px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="220dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="60px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonEvent"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homebutton"
        android:padding="10dp"
        android:text="@string/events"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonTraining"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homebutton"
        android:padding="10dp"
        android:text="@string/training"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonJob"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homebutton"
        android:padding="10dp"
        android:text="@string/ptj"
        android:textColor="#000000" />

    wrap_content<Button
        android:id="@+id/buttonHR"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/homebutton"
        android:padding="10dp"
        android:text="@string/pthr"
        android:textColor="#000000" />

</FrameLayout>

</layout>